<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete  %></li>
  <% end %>
</ul>

<%= link_to "Back to cocktails", cocktails_path(@cocktail) %>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
